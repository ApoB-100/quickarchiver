{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "quickarchiver@bergerdata.de",
      "strict_min_version": "115.1",
      "strict_max_version": "115.*"
    }
  },
  "name": "QuickArchiver",
  "author": "Otto Berger <otto@bergerdata.de>",
  "description": "Getting things done in your inbox.",
  "version": "0.2.11",
  "default_locale": "en-US",
  "background": {
    "scripts": [
      "content/scripts/quickarchiver.js",
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "menus",
    "messagesRead",
    "messagesMove",
    "accountsRead"
  ],
  "commands": {
    "quickarchiver_move": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Move mail to QuickArchive folder (if rule is present)"
    }
  },
  "message_display_action": {
    "default_title": "QuickArchiver"
  }
}